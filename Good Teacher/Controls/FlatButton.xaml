<UserControl x:Name="flatbutton" x:Class="Good_Teacher.Controls.FlatButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Good_Teacher.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" MouseDown="flatbutton_MouseDown" MouseUp="flatbutton_MouseUp"  MouseEnter="flatbutton_MouseEnter"  MouseLeave="flatbutton_MouseLeave">
    <Grid>
        <Image Source="{Binding Path=Image_Source ,ElementName=flatbutton}" Stretch="{Binding Path=Image_Stretch ,ElementName=flatbutton}" Margin="3"/>
    </Grid>
    
</UserControl>
