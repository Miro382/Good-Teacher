<UserControl x:Name="selectbutton" x:Class="Good_Teacher.Controls.SelectButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Good_Teacher.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" MouseEnter="selectbutton_MouseEnter" MouseLeave="selectbutton_MouseLeave" MouseLeftButtonDown="selectbutton_MouseLeftButtonDown">
    <Grid>
        <Image Source="{Binding Path=Image_Source ,ElementName=selectbutton}" Stretch="{Binding Path=Image_Stretch ,ElementName=selectbutton}" Margin="3"/>

    </Grid>
</UserControl>
