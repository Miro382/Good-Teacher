<Window x:Class="Good_Teacher.Windows.Special.Window_FontManager"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Good_Teacher.Windows.Special"
        xmlns:strings="clr-namespace:Good_Teacher.Strings"
        mc:Ignorable="d"
        Title="{x:Static strings:ResStrings.FontPackage}" MinHeight="300" MinWidth="400" Height="500" Width="700" WindowStartupLocation="CenterOwner" Icon="/Good Teacher;component/Resources/Menu/FontPackage.png">
    <StackPanel>
        <Button x:Name="ButtonAdd" Margin="20" Content="{x:Static strings:ResStrings.Add}" Padding="5" FontSize="15" Click="ButtonAdd_Click" />

        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
            <StackPanel x:Name="SP_Fonts">

            </StackPanel>
        </ScrollViewer>

    </StackPanel>
</Window>
