<Window x:Class="Good_Teacher.Windows.Dialogs.DWindow_ModelSelector"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Good_Teacher.Windows.Dialogs"
        mc:Ignorable="d"
        xmlns:strings="clr-namespace:Good_Teacher.Strings"
        Title="{x:Static strings:ResStrings.ModelSelection}" Height="600" Width="800" WindowStartupLocation="CenterOwner" ResizeMode="NoResize" Icon="/Good Teacher;component/Resources/Icons/ModelsColors.png">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Good Teacher;component/Resources/Background/ModelBackground.jpg" Stretch="UniformToFill"/>
        </Grid.Background>

        <StackPanel Margin="50" Background="#7FFFFFFF">

            <StackPanel Orientation="Horizontal" Margin="20" HorizontalAlignment="Center">
                <Button Click="ImportModel_Click" Width="180" Height="50" Content="{x:Static strings:ResStrings.ImportModel}" FontSize="16" />
            </StackPanel>

            <ListBox x:Name="ModelList" Margin="20" Height="330" Background="#7FFFFFFF"/>
            
        </StackPanel>

    </Grid>
</Window>
