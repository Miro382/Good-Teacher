<Window x:Class="Good_Teacher.Windows.Dialogs.DWindow_MoveTo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Good_Teacher.Windows.Dialogs"
        xmlns:strings="clr-namespace:Good_Teacher.Strings"
        mc:Ignorable="d"
        Title="{x:Static strings:ResStrings.MovePage}" Height="170" Width="240" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <DockPanel Margin="10">
        <Label Content="{x:Static strings:ResStrings.MoveToPosition}" DockPanel.Dock="Top" />
        <TextBox x:Name="TB_Number" Height="23" Text="1" DockPanel.Dock="Top" PreviewTextInput="TextBox_PreviewTextInput" DataObject.Pasting="TextBox_Pasting"/>

        <Button Content="{x:Static strings:ResStrings.OK}" Padding="0,5" DockPanel.Dock="Bottom" VerticalAlignment="Bottom" Click="ButtonOK_Click" />

    </DockPanel>
</Window>
